[user]
  name = Javier Cadiz
  email = cadizjavier@gmail.com

[color]
  diff = auto
  status = auto
  branch = auto

[color "diff"]
  meta = yellow

[core]
  editor = vim --noplugin
  excludesfile = ~/.gitignore
  pager = delta

[delta]
  plus-color = "#012800"
  minus-color = "#340001"
  syntax-theme = Monokai Extended
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse

[interactive]
  diffFilter = delta --color-only

[apply]
  whitespace = nowarn

[alias]
  lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
  lgf = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  st = status -s
  co = checkout
  mg = merge --no-ff
  undo = reset --soft HEAD~

[pull]
  ff = only
