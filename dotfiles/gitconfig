[user]
  name = Javier Cadiz
  email = cadizjavier@gmail.com

[init]
	defaultBranch = main

[color]
  diff = auto
  status = auto
  branch = auto

[color "diff"]
  meta = yellow

[core]
  editor = vim --noplugin
  excludesfile = ~/.gitignore
  pager = delta

[delta]
  plus-color = "#012800"
  minus-color = "#340001"
  syntax-theme = Monokai Extended

[interactive]
  diffFilter = delta --color-only

[apply]
  whitespace = nowarn

[alias]
  co = checkout
  mg = merge --no-ff

[pull]
  ff = only

[push]
	autoSetupRemote = true
